<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.glaeseker_tom.sportfestapp.TableFragment"
    android:background="#FFFFFF">

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:scrollbars="horizontal">

        <ScrollView
            android:id="@+id/vertical_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <TableLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/tableLayout"
                    android:layout_height="wrap_content">

                    <TableRow android:background="#E0E0E0"
                        >

                        <TextView
                            android:paddingRight="20dp"
                            android:text="Spiel-ID"
                            android:textAlignment="center"
                            android:textSize="22dp" />

                        <TextView
                            android:paddingRight="20dp"
                            android:text="Uhrzeit"
                            android:textAlignment="center"
                            android:textSize="22dp" />

                        <TextView
                            android:paddingRight="20dp"
                            android:text="M 1"
                            android:textAlignment="center"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:paddingRight="20dp"
                            android:text="M 2"
                            android:textAlignment="center"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:text="Ergebnis "
                            android:textAlignment="center"
                            android:textSize="22dp" />
                    </TableRow>

                </TableLayout>


            </LinearLayout>

        </ScrollView>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="100"
        android:gravity="bottom"
        android:id="@+id/ll_entry"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/et_id"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:hint="Spiel-ID" />

        <EditText
            android:id="@+id/et_points_m1"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/et_id"
            android:hint="Punkte M1" />

        <EditText
            android:id="@+id/et_points_m2"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/et_points_m1"
            android:hint="Punkte M2" />


        <Button
            android:id="@+id/btn_send_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_weight="25"
            android:layout_toRightOf="@+id/et_points_m2"
            android:text="Ergebnis eintragen" />

    </LinearLayout>




</RelativeLayout>
