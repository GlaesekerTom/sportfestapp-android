<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="de.glaeseker_tom.sportfestapp.fragments.PlacementFragment">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayout"
        app:tabTextColor="#C2C2C2"
        app:tabSelectedTextColor="#ffff"
        android:theme="@style/toolbarTabStyle"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="#ffff"
        app:tabIndicatorHeight="4dp"/>
<!---#bdbdbd"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:text="Platz"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:paddingLeft="-10dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Klasse"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="22"
            android:textSize="20dp"
            android:paddingLeft="-25dp"
            android:textAlignment="center"
            android:text="Punkte"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:textSize="20dp"
            android:textAlignment="center"
            android:paddingLeft="-10dp"
            android:text="TorverhÃ¤ltnis"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_pager" />
</LinearLayout>
