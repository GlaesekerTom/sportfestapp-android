<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.glaeseker_tom.sportfestapp.ScoreboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sc_tv_matchId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="20dp"
            android:layout_weight="30"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/sc_tv_teams"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/sc_tv_sport"
            android:text="Reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:textSize="20dp"
            android:textAlignment="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sc_btn_timer_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_weight="30"/>

        <TextView
            android:id="@+id/sc_tv_timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/sc_btn_timer_reset"
            android:text="Reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sc_btn_goal_team1a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_weight="30"/>
        <Button
            android:id="@+id/sc_btn_goal_team1r"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_weight="30"/>

        <TextView
            android:id="@+id/sc_tv_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/sc_btn_goal_team2r"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"/>
        <Button
            android:id="@+id/sc_btn_goal_team2a"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_weight="1">

        <Button
            android:id="@+id/sc_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Abbrechen"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_weight="50"/>

        <Button
            android:id="@+id/sc_btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Absenden"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_weight="50"/>

    </LinearLayout>






</LinearLayout>
